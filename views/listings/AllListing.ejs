<% layout("/layouts/boilerplate") %>
   
    <div class="container mt-3">
        <div id="filters" class="collapse navbar-collapse ">
            <div class="filter"><a href="/listings/allListing">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </a>
            </div>
            <div class="filter"><a href="/listings/allListing?category=room">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=iconic+cities">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic Cities</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=mountains">
                    <div><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountains</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=castles">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Castles</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=swimming+pools">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing Pools</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=camping">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=farms">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=arctic">
                    <div><i class="fa-solid fa-snowflake"></i></div>
                    <p>Arctic</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=view">
                    <div><i class="fa-solid fa-mountain-sun"></i></div>
                    <p>Amazing View</p>
                </a></div>
            <div class="filter"><a href="/listings/allListing?category=beach">
                    <div><i class="fa-solid fa-umbrella-beach"></i></div>
                    <p>Beachfront</p>
                </a></div>
        
                <div class="filter"><a href="/listings/allListing?category=country+side">
                        <div><i class="fa-solid fa-truck-monster"></i></div>
                        <p>Country Side</p>
                    </a></div>

                    
                
        </div>
        <h3>
            <%= category ? `Resorts for ${category}` : 'Trending Resorts' %>
        </h3>
        
        <div class="  row row-cols-lg-3 row-cols-md-2 row-cols-sm-3 mt-4 ">
            <% if (allListings && allListings.length> 0) { %>
                <% for (let listing of allListings) { %>
                    <a href="/listings/allListing/<%= listing._id %>" class="listing_link">
                        <div class="card col listing-card">
                            <img src="/uploads/<%= listing.image.filename %>" alt="<%= listing.title %>" style="height: 20rem; border-radius: 1rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= listing.title %>
                                    </b><br>
                                    <%= listing.location %>, <%= listing.country %><br>
                                            <b>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</b>
                                            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                                </p>
                            </div>
                        </div>
                    
                    </a>
                    <% } %>
                        <% } else { %>
                            <p>No listings available in this category.</p>
                            <% } %>
        </div>
    </div>

    