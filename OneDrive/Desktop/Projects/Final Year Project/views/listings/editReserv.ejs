<% layout("/layouts/boilerplate") %>
    <div class="custom-container">
        <div class="container mt-5" style="width: 50rem;">
            <h1 class="mb-4 text-center">Edit Reservation</h1>
            <div class="card shadow p-4">
                <form action="/reservations/<%= reservation._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="checkin" class="form-label">Check-in Date:</label>
                        <input type="date" name="checkin" id="checkin" class="form-control"
                            value="<%= reservation.checkin.toISOString().split('T')[0] %>">
                    </div>
                    <div class="mb-3">
                        <label for="checkout" class="form-label">Check-out Date:</label>
                        <input type="date" name="checkout" id="checkout" class="form-control"
                            value="<%= reservation.checkout.toISOString().split('T')[0] %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" name="email" id="email" class="form-control"
                            value="<%= reservation.email %>">
                    </div>
                    <div class="mb-3">
                        <label for="paymentAmount" class="form-label">Total Payment:</label>
                        <input type="number" step="0.01" name="paymentAmount" id="paymentAmount" class="form-control"
                            value="<%= reservation.paymentAmount %>">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-md" >Save Changes</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>